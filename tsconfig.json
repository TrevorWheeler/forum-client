{
  "extends": "@vue/tsconfig/tsconfig.dom.json",
    "files": [],
  "references": [],
  "compilerOptions": {
    "baseUrl": ".",
    "target": "ESNext",
    "useDefineForClassFields": true,
    "module": "ESNext",
    "moduleResolution": "Node",
    "strict": true,
    "jsx": "preserve",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "esModuleInterop": true,
    "lib": ["ESNext", "DOM"],
    "skipLibCheck": true,
    "noEmit": true,
    "paths": {
      "@/*": [
       "src/*"
      ]
     },
  },
  "include": ["env.d.ts", "src/**/*.ts", "src/**/*.d.ts", "src/**/*.tsx", "src/**/*.vue", "vite.config.*",
  "vitest.config.*",
  "cypress.config.*",
  "nightwatch.conf.*",
  "playwright.config.*"],
  "exclude": ["node_modules", "src/**/__tests__/*"],
  "types" : ["node"]
}
